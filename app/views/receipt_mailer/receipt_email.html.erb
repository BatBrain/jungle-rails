
<html>
  <body>
    <%= current_user = @order.user %>
    <section class="orders-show">

      <header class="page-header">
        <h1>Thank you for your order!</h1>
      </header>

      <div class="container">
          <div class="row">
              <div class="col-xs-12">
          		<div class="invoice-title">
          			<h2>Invoice</h2><h3 class="pull-right">Order #<%= @order.id %></h3>
          		</div>
          		<hr>
          		<div class="row">
          			<div class="col-xs-6">
                  <table>
                    <thead>
                      <tr>
                        <td><strong>Billed To:</strong><br></td>
                        <td><strong>Shipped To:</strong><br></td>
                        <td><strong>Payment Method:</strong><br></td>
                        <td><strong>Order Date:</strong><br></td>
                      </tr>
                    </thead>
                    <tbody>
                      <td>
                        <%= current_user.name || "N/A " %> <br>
              					1234 Main<br>
              					Apt. 4B<br>
              					Springfield, ST 54321
                      </td>
                      <td>
                        Jane Smith<br>
              					1234 Main<br>
              					Apt. 4B<br>
              					Springfield, ST 54321
                      </td>
                      <td>
                        Visa ending **** 4242<br>
            					  <%= @order.email %>
                      </td>
                      <td>
                      	<%= @order.created_at.to_formatted_s(:long) %><br><br>
                      </td>
                    </tbody>
                  </table>

          				</address>
          			</div>
          			<div class="col-xs-6 text-right">
          				<address>


          				</address>
          			</div>
          		</div>
          		<div class="row">
          			<div class="col-xs-6">
          				<address>


          				</address>
          			</div>
          			<div class="col-xs-6 text-right">
          				<address>


          				</address>
          			</div>
          		</div>
          	</div>
          </div>

          <div class="row">
          	<div class="col-md-12">
          		<div class="panel panel-default">
          			<div class="panel-heading">
          				<h3 class="panel-title"><strong>Order summary</strong></h3>
          			</div>
          			<div class="panel-body">
          				<div class="table-responsive">
          					<table class="table table-condensed">
          						<thead>
                                      <tr>
              							<td><strong>Item</strong></td>
              							<td class="text-center"><strong>Price</strong></td>
              							<td class="text-center"><strong>Quantity</strong></td>
              							<td class="text-right"><strong>Totals</strong></td>
                                      </tr>
          						</thead>
                      <tbody>
                        <% @order.line_items.each do |line_item| %>
                          <%= render 'orders/item', line_item: line_item %>
                        <% end %>
                      <tr>
        								<td class="thick-line"></td>
        								<td class="thick-line"></td>
        								<td class="thick-line text-center"><strong>Subtotal</strong></td>
        								<td class="thick-line text-right"><%= number_to_currency(@order.total_cents / 100, precision: 2) %></td>
        							</tr>
        							<tr>
        								<td class="no-line"></td>
        								<td class="no-line"></td>
        								<td class="no-line text-center"><strong>Shipping</strong></td>
        								<td class="no-line text-right">$15</td>
        							</tr>
                      <tr>
                        <td class="no-line"></td>
                        <td class="no-line"></td>
                        <td class="no-line text-center"><strong>Tax</strong></td>
                        <td class="no-line text-right"><%= number_to_currency((@order.total_cents * 0.13)/ 100, precision: 2) %></td>
                      </tr>
        							<tr>
        								<td class="no-line"></td>
        								<td class="no-line"></td>
        								<td class="no-line text-center"><strong>Total</strong></td>
        								<td class="no-line text-right"><%= number_to_currency((@order.total_cents * 1.13)/ 100, precision: 2) %></td>
        							</tr>
          						</tbody>
          					</table>
          				</div>
          			</div>
          		</div>
          	</div>
          </div>
      </div>
    </section>
  </body>
</html>
